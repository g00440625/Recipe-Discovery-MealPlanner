<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MealPlanner.MainPage"
             Title="Meal Planner">

	<ScrollView>
		<VerticalStackLayout Padding="30" Spacing="20">

			<!-- App Header -->
			<VerticalStackLayout Spacing="5" Margin="0,20,0,30">
				<Label Text="🍽️"
                       FontSize="48"
                       HorizontalOptions="Center" />
				<Label Text="Meal Planner"
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#333" />
				<Label Text="Plan your meals, save favorites, shop smart"
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="Gray" />
			</VerticalStackLayout>


			<!-- Browse Recipes Button -->
			<Border Stroke="#4CAF50"
                    StrokeThickness="2"
                    BackgroundColor="#4CAF50"
                    Padding="0"
                    HeightRequest="70"
                    StrokeShape="RoundRectangle 15">
				<Border.Shadow>
					<Shadow Brush="Black"
                            Opacity="0.2"
                            Radius="10"
                            Offset="0,4" />
				</Border.Shadow>
				<Button Text="🔍 Browse Recipes"
                        Clicked="OnBrowseRecipesClicked"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="20"
                        FontAttributes="Bold" />
			</Border>

			<!-- Meal Planner Button -->
			<Border Stroke="#2196F3"
                    StrokeThickness="2"
                    BackgroundColor="#2196F3"
                    Padding="0"
                    HeightRequest="70"
                    StrokeShape="RoundRectangle 15">
				<Border.Shadow>
					<Shadow Brush="Black"
                            Opacity="0.2"
                            Radius="10"
                            Offset="0,4" />
				</Border.Shadow>
				<Button Text="📅 Weekly Meal Plan"
                        Clicked="OnMealPlannerClicked"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="20"
                        FontAttributes="Bold" />
			</Border>

			<!-- Shopping List Button -->
			<Border Stroke="#FF9800"
                    StrokeThickness="2"
                    BackgroundColor="#FF9800"
                    Padding="0"
                    HeightRequest="70"
                    StrokeShape="RoundRectangle 15">
				<Border.Shadow>
					<Shadow Brush="Black"
                            Opacity="0.2"
                            Radius="10"
                            Offset="0,4" />
				</Border.Shadow>
				<Button Text="🛒 Shopping List"
                        Clicked="OnShoppingListClicked"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="20"
                        FontAttributes="Bold" />
			</Border>

			<!-- Random Recipe Button -->
			<Border Stroke="#9C27B0"
                    StrokeThickness="2"
                    BackgroundColor="#9C27B0"
                    Padding="0"
                    HeightRequest="70"
                    StrokeShape="RoundRectangle 15">
				<Border.Shadow>
					<Shadow Brush="Black"
                            Opacity="0.2"
                            Radius="10"
                            Offset="0,4" />
				</Border.Shadow>
				<Button Text="🎲 Random Recipe"
                        Clicked="OnRandomRecipeClicked"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="20"
                        FontAttributes="Bold" />
			</Border>
			<!-- Loading Indicator (hidden by default) -->
			<ActivityIndicator x:Name="LoadingIndicator"
                              IsRunning="False"
                              IsVisible="False"
                              Color="#9C27B0"
                              Margin="0,20" />


		</VerticalStackLayout>
	</ScrollView>

</ContentPage>