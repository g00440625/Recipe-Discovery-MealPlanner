<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PantryBlissClone.RecipeDetailPage"
             Title="{Binding Name}">

	<ScrollView>
		<StackLayout Padding="10" Spacing="10">
			<Image Source="{Binding ImageUrl}" HeightRequest="200" Aspect="AspectFill"/>
			<Label Text="{Binding Category}" FontSize="16" TextColor="Gray"/>
			<Label Text="Ingredients:" FontSize="18" FontAttributes="Bold"/>
			<StackLayout x:Name="IngredientsStackLayout" Spacing="5"/>
			<Label Text="Instructions:" FontSize="18" FontAttributes="Bold"/>
			<Label Text="{Binding Instructions}" FontSize="16" LineBreakMode="WordWrap"/>
		</StackLayout>
	</ScrollView>
</ContentPage>
