<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RecipeDiscoveryApp.HomePage"
             Title="Recipe Discovery">

    <StackLayout Padding="20">
        <Label Text="Welcome to Recipe Discovery!"
               FontSize="24"
               HorizontalOptions="CenterAndExpand" />

        <!-- Search Bar -->
        <SearchBar x:Name="SearchBar"
                   Placeholder="Search for recipes..."
                   SearchButtonPressed="OnSearchButtonPressed" />

        <!-- Recipe Results List -->
        <CollectionView x:Name="RecipeListView"
                        ItemsSource="{Binding Recipes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" BorderColor="Gray" CornerRadius="10">
                        <StackLayout>
                            <Image Source="{Binding StrMealThumb}" HeightRequest="150"/>
                            <Label Text="{Binding StrMeal}" FontSize="18" HorizontalOptions="Center" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>
